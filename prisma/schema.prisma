generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                     String    @id @default(cuid())
  email                  String    @unique
  name                   String?
  password               String
  role                   UserRole  @default(CUSTOMER)
  dateOfBirth            DateTime?
  ageVerified            Boolean   @default(false)
  verifiedAt             DateTime?
  resetPasswordToken     String?   @unique
  resetPasswordExpires   DateTime?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  orders                 Order[]
  cart                   CartItem[]
  addresses              Address[]
  reviews                Review[]
  wishlist               WishlistItem[]
}

model Product {
  id                String      @id @default(cuid())
  name              String
  slug              String      @unique
  description       String      @db.Text
  price             Float
  compareAtPrice    Float?
  category          Category
  subcategory       String?
  images            String[]
  featured          Boolean     @default(false)
  ageRestricted     Boolean     @default(true)  // 18+ age verification required
  thcContent        String?
  cbdContent        String?
  strain            String?
  // Discount fields
  discountType      DiscountType? // PERCENTAGE or FIXED
  discountValue     Float?        // Percentage (0-100) or fixed amount
  discountStartDate DateTime?     // When discount starts
  discountEndDate   DateTime?     // When discount ends
  averageRating     Float?      @default(0)
  totalReviews      Int         @default(0)
  totalSales        Int         @default(0)
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  orderItems        OrderItem[]
  cartItems         CartItem[]
  reviews           Review[]
  wishlistItems     WishlistItem[]
  storeInventory    StoreInventory[]
  frequentlyBoughtWith FrequentlyBoughtTogether[] @relation("ProductA")
  frequentlyBoughtBy   FrequentlyBoughtTogether[] @relation("ProductB")
  
  @@index([category])
  @@index([featured])
  @@index([ageRestricted])
  @@index([createdAt])
  @@index([category, ageRestricted])
}

model CartItem {
  id        String   @id @default(cuid())
  userId    String
  productId String
  quantity  Int      @default(1)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId])
}

model Order {
  id              String         @id @default(cuid())
  userId          String?
  orderNumber     String         @unique
  status          OrderStatus    @default(PENDING)
  fulfillmentType FulfillmentType @default(DELIVERY)
  total           Float
  subtotal        Float
  tax             Float
  shippingCost    Float          @default(0)
  shippingAddress Address?       @relation(fields: [addressId], references: [id])
  addressId       String?
  pickupStore     Store?         @relation(fields: [pickupStoreId], references: [id])
  pickupStoreId   String?
  items           OrderItem[]
  user            User?          @relation(fields: [userId], references: [id])
  customerEmail   String
  customerName    String
  customerPhone   String
  paymentReference String?       // Payment reference (e.g., Paystack reference or 'CASH_PAYMENT')
  // Direct address fields for all orders (guest and logged-in)
  deliveryStreet  String?
  deliveryCity    String?
  deliveryState   String?
  deliveryZipCode String?
  deliveryCountry String?        @default("South Africa")
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
}

model Address {
  id         String   @id @default(cuid())
  userId     String
  fullName   String
  street     String
  city       String
  state      String
  zipCode    String
  country    String   @default("USA")
  phone      String
  isDefault  Boolean  @default(false)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders     Order[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum UserRole {
  CUSTOMER
  ADMIN
}

enum Category {
  FLOWER
  PRE_ROLLS
  EDIBLES
  CONCENTRATES
  VAPES
  ACCESSORIES
  ROLLING_PAPERS
  BONGS_AND_PIPES
  GRINDERS
  OTHER
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  OUT_FOR_DELIVERY
  READY_FOR_PICKUP
  PICKED_UP
  COMPLETED
  CANCELLED
  REFUNDED
}

enum FulfillmentType {
  DELIVERY
  PICKUP
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

model Review {
  id          String   @id @default(cuid())
  userId      String
  productId   String
  rating      Int      // 1-5 stars
  title       String?
  comment     String   @db.Text
  verified    Boolean  @default(false) // Verified purchase
  helpful     Int      @default(0)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, productId])
  @@index([productId])
  @@index([rating])
}

model WishlistItem {
  id        String   @id @default(cuid())
  userId    String
  productId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

model FrequentlyBoughtTogether {
  id         String   @id @default(cuid())
  productAId String
  productBId String
  count      Int      @default(1) // How many times bought together
  productA   Product  @relation("ProductA", fields: [productAId], references: [id], onDelete: Cascade)
  productB   Product  @relation("ProductB", fields: [productBId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([productAId, productBId])
  @@index([productAId])
  @@index([count])
}

model Store {
  id              String           @id @default(cuid())
  name            String
  slug            String           @unique
  address         String
  city            String
  state           String
  zipCode         String
  country         String           @default("South Africa")
  phone           String
  email           String?
  latitude        Float?
  longitude       Float?
  openingHours    Json?            // Store hours in JSON format
  isActive        Boolean          @default(true)
  allowsPickup    Boolean          @default(true)
  inventory       StoreInventory[]
  orders          Order[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([isActive])
  @@index([allowsPickup])
}

model StoreInventory {
  id              String   @id @default(cuid())
  storeId         String
  productId       String
  quantity        Int      @default(0)
  lowStockAlert   Int      @default(10) // Alert when stock falls below this
  store           Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  product         Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([storeId, productId])
  @@index([storeId])
  @@index([productId])
  @@index([quantity])
}

model SiteSettings {
  id                String   @id @default(cuid())
  key               String   @unique // e.g., "social_facebook", "social_instagram"
  value             String   @db.Text // The actual URL or value
  category          String   @default("general") // e.g., "social", "contact", "general"
  description       String?  // Human-readable description
  updatedAt         DateTime @updatedAt
  createdAt         DateTime @default(now())

  @@index([category])
}
